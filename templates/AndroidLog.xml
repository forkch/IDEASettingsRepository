<templateSet group="AndroidLog">
  <template name="tlogd" value="Timber.d(&quot;$METHOD_NAME$: $content$&quot;);" description="Timber.d(String)" toReformat="true" toShortenFQNames="true">
    <variable name="METHOD_NAME" expression="methodName()" defaultValue="" alwaysStopAt="false" />
    <variable name="content" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="tloge" value="Timber.e($exception$, &quot;$METHOD_NAME$: $content$&quot;, );" description="Timber.e(Exception, String)" toReformat="true" toShortenFQNames="true">
